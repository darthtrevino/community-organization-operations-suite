{
  "name": "@cbosuite/api",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "essex clean dist/ deploy.zip",
    "start": "nodemon src/index.ts",
    "start:api": "docker-compose up -d && NODE_CONFIG_ENV='development' yarn start",
    "build": "run-s clean compile create_mock_data write_deploy_package",
    "build:api": "yarn build",
    "archive": "./scripts/archive.sh",
    "archive:api": "yarn archive",
    "compile": "ttsc -b tsconfig.json",
    "test": "jest",
    "assets": "yarn create_mock_data",
    "create_mock_data": "ts-node createMockData.ts",
    "create_seed_data": "ts-node createSeedData.ts",
    "deploy:integ": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-api-integ --src deploy.zip",
    "deploy:prod": "az webapp deployment source config-zip --resource-group greenlight --name greenlight-api --src deploy.zip",
    "write_deploy_package": "ts-node writeDeployPackage.ts",
    "migrate": "ts-node ./migrateMongo.ts",
    "migrate:db:up": "yarn migrate up"
  },
  "dependencies": {
    "@cbosuite/schema": "workspace:packages/schema",
    "@graphql-tools/schema": "^8.2.0",
    "@graphql-tools/utils": "^8.2.3",
    "apollo-server": "^3.3.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-fastify": "^3.3.0",
    "applicationinsights": "^2.1.7",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "dataloader": "^2.0.0",
    "detect-libc": "^1.0.3",
    "dotenv": "^10.0.0",
    "fastify": "^3.21.6",
    "fastify-cors": "^6.0.2",
    "firebase-admin": "^9.11.1",
    "graphql": "^15.6.0",
    "graphql-subscriptions": "^1.2.1",
    "i18n": "^0.13.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "make-dir": "^3.1.0",
    "migrate-mongo": "^8.2.3",
    "mongodb": "3.6.12",
    "node-fetch": "^2.6.5",
    "nodemailer": "^6.6.5",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "nopt": "^5.0.0",
    "npmlog": "^5.0.1",
    "pino": "^6.13.3",
    "pino-pretty": "^6.0.0",
    "semver": "^7.3.5",
    "subscriptions-transport-ws": "^0.9.19",
    "tar": "^6.1.11",
    "uuid": "^8.3.2",
    "ws": "^8.2.2"
  },
  "devDependencies": {
    "@essex/babel-config": "^18.1.0",
    "@essex/jest-config": "^18.0.1",
    "@essex/scripts": "^18.2.0",
    "@tsconfig/node14": "^1.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.39",
    "@types/copy": "^0.3.2",
    "@types/faker": "^5.5.8",
    "@types/i18n": "^0.13.1",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.173",
    "@types/migrate-mongo": "^8.1.2",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^14.17.18",
    "@types/nodemailer": "^6.4.4",
    "@types/pino": "^6.3.11",
    "@types/pino-pretty": "^4.7.1",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^7.4.7",
    "copy": "^0.3.2",
    "faker": "^5.5.3",
    "jest": "^27.2.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
